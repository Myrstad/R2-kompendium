<style>
  .eyebrow {
		background-color: black;
		color: white;
		margin-top: 4rem;
		min-height: 3rem;
		border-radius: 50vmax;
		display: flex;
		align-items: center;
		width: fit-content;
		padding: 0.5rem 2rem;

		font-size: 1.25rem;
		font-weight: 700;

		font-family: var(--font-heading);
	}

	.navigation {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 1rem 2rem;
		padding: 0;
		margin-top: 3rem;
		/* margin-bottom: 7rem; */
	}

	.navigation li {
		list-style: none;
	}
	
	.navigation a {
		color: black;
		height: 10rem;
		padding: 1rem 2rem;
		background-color: var(--blue-200);
		border-radius: 1.5rem;
		font-size: 1.75rem;
		line-height: 100%;
		display: grid;
		place-items: center;
		text-decoration: none;
		text-align: center;
		font-family: var(--font-heading);
		font-weight: 600;
		transition: background-color 250ms ease;
	}

	.navigation a:hover,
	.navigation a:focus-within {
		background-color: var(--blue-100);
	}
	.navigation a:active {
		background-color: var(--blue-50);
	}

	h1 {
		font-family: var(--font-heading);
		font-weight: 600;
		font-size: 6rem;
		line-height: 100%;
		margin-top: 1rem;
	}

	@media screen and (max-width: 800px) {
		h1 {
			font-size: 4rem;
		}

		.navigation {
			grid-template-columns: 1fr 1fr;
		}

		.navigation a {
			font-size: 1.5rem;
			height: unset
		}
	}

	@media screen and (max-width: 600px) {
		.eyebrow {
			font-size: 1.125rem;
		}

		h1 {
			font-size: 3rem;
		}

		.navigation {
			grid-template-columns: 1fr;
		}

		.navigation a {
			font-size: 1.25rem;
		}
	}
</style>